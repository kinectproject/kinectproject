<?xml version="1.0"?><!DOCTYPE FubiRecognizers SYSTEM "FubiRecognizers.dtd"><FubiRecognizers>    <!--Arms crossed - Unfortunately quite instable-->  <PostureCombinationRecognizer name="ArmsCrossedAFewSeconds">    <State minDuration="1.2">      <Recognizer name="ArmsCrossed"/>    </State>  </PostureCombinationRecognizer>  <PostureCombinationRecognizer name="HandsOutAFewSeconds">    <State minDuration="1.2">      <Recognizer name="RightHandOut"/>      <Recognizer name="LeftHandOut"/>    </State>  </PostureCombinationRecognizer>                                    <!--HandFrontDown-->  <JointRelationRecognizer name="rightHandFrontDown" visibility="hidden">    <Joints main="rightHand" relative="rightShoulder"/>    <MaxValues z="-250" x="150" y="-300"/>  </JointRelationRecognizer>  <JointRelationRecognizer name="leftHandFrontDown" visibility="hidden">    <Joints main="leftHand" relative="leftShoulder"/>    <MaxValues z="-250" y="-300"/>    <MinValues x="-150"/>  </JointRelationRecognizer>  <PostureCombinationRecognizer name="HandsFrontDown">    <State minDuration="1.5">      <Recognizer name="rightHandFrontDown"/>      <Recognizer name="leftHandFrontDown"/>    </State>  </PostureCombinationRecognizer>    <!--Waving-->  <JointRelationRecognizer name="rightHandAboveShoulder" visibility="hidden">    <Joints main="rightHand" relative="rightShoulder"/>    <MinValues y="0"/>  </JointRelationRecognizer>  <LinearMovementRecognizer name="rightHandMovesRight" visibility="hidden">      <Joints main="rightHand" relative="rightShoulder"/>      <Direction x="1" y="0" z="0"/>      <Speed min="250"/>  </LinearMovementRecognizer>  <LinearMovementRecognizer name="rightHandMovesLeft" visibility="hidden">      <Joints main="rightHand" relative="rightShoulder"/>      <Direction x="-1" y="0" z="0"/>      <Speed min="250"/>  </LinearMovementRecognizer>  <PostureCombinationRecognizer name="RightHandWavingAboveTheShoulder">    <State minDuration="0.1" maxDuration="1.2" timeForTransition="0.3">      <Recognizer name="rightHandAboveTheShoulder" ignoreOnTrackingError="true"/>      <Recognizer name="rightHandMovesLeft"/>    </State>    <State minDuration="0.1" maxDuration="1.2" timeForTransition="0.3">      <Recognizer name="rightHandAboveTheShoulder" ignoreOnTrackingError="true"/>      <Recognizer name="rightHandMovesRight"/>    </State>    <State minDuration="0.1" maxDuration="1.2" timeForTransition="0.3">      <Recognizer name="rightHandAboveTheShoulder" ignoreOnTrackingError="true"/>      <Recognizer name="rightHandMovesLeft"/>    </State>    <State minDuration="0.1">      <Recognizer name="rightHandAboveTheShoulder" ignoreOnTrackingError="true"/>      <Recognizer name="rightHandMovesRight"/>    </State>  </PostureCombinationRecognizer>    <!--Pointing Forward-->  <LinearMovementRecognizer name="rightHandStill" visibility="hidden">    <Joints main="rightHand" relative="rightShoulder"/>    <Speed min="0" max="500"/>  </LinearMovementRecognizer>  <JointRelationRecognizer name="rightHandToUpperFront" visibility="hidden">    <Joints main="rightHand" relative="rightShoulder"/>    <MaxValues x="300"/>    <MinValues x="-350" y="-300"/>  </JointRelationRecognizer>  <PostureCombinationRecognizer name="PointingForward">    <State minDuration="1.2">      <Recognizer name="PointingRight"/>      <Recognizer name="rightHandStill"/>      <Recognizer name="rightHandToUpperFront"/>    </State>  </PostureCombinationRecognizer>    <!--Turn Around-->  <JointOrientationRecognizer name="TurnLeft" visibility="hidden">    <Joint name="torso"/>    <MaxDegrees y="-45"/>  </JointOrientationRecognizer>  <PostureCombinationRecognizer name="TurnAround">    <State minDuration="1.5">      <Recognizer name="TurnLeft"/>    </State>  </PostureCombinationRecognizer>  </FubiRecognizers>